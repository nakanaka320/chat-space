.toppage
  = render 'shared/side_bar'

  .rightcontent
    .rightcontent__roomedit
      .rightcontent__roomname
        = @group.name
        .rightcontent__roomname__memberlist
          - @group.users.each do |user|
            = "#{user.name}, "
          = link_to edit_group_path(@group.id) do
            .rightcontent__edit
              Edit

    .rightcontent__messageslist
      = render @messages
    .rightcontent__textarea
      = form_for [@group, @message] do |f|
        .rightcontent__textarea__message
          = f.text_field :content, class: 'rightcontent__textarea__message', placeholder: 'type a message'
          = f.label :image, class: 'input__file' do
            = fa_icon 'picture-o',class: 'icon'
            = f.file_field :image, class: 'message_image'
          = f.submit 'Send', class: 'rightcontent__textarea__send'