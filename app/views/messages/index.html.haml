.toppage
  -# .header
  -#   グループを作成しました
  .leftcontent
    .leftcontent__header
      .leftcontent__config
        .leftcontent__config__user
          光夫
        .leftcontent__config__iconbox
          .leftcontent__config__iconbox__brush
            = link_to messages_path do
              = fa_icon 'paint-brush'
              %span<>
          .leftcontent__config__iconbox__cog
            = link_to messages_path method: :create do
              =fa_icon 'cog'
              %span<>
      .leftcontent__roomlist
        .leftcontent__roomlist__roomname
          roomname
          .leftcontent__roomlist__roomname__firstmessage
            hallo

  .rightcontent
    .rightcontent__roomedit
      .rightcontent__roomname
        roomname
        .rightcontent__roomname__memberlist
          menbername
          .rightcontent__edit
            Edit
    .rightcontent__messageslist
      .rightcontent__message
        massge
        .rightcontent_time
          time day
      .rightcontent__message__a
        コメント

    .rightcontent__textarea
      %form
        .rightcontent__textarea__message
          %input.input-box{placeholder: "type a message", type: "text"}/
          %label.rightcontent__textarea__message
            = fa_icon 'image',class: 'icon'
            %input.message_image{type: 'file'}/
        .rightcontent__textarea__send
          %input.send{type: 'submit', value: 'Send'}